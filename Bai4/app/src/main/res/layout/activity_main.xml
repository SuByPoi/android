<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="99dp"
        android:background="@drawable/duongvienchunhat">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Calculator-1.com"
                android:textColor="#0B8DC8"
                android:textSize="20dp"></TextView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/duongvien_goctron">

            <EditText
                android:id="@+id/edtext_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="0"
                android:textAlignment="viewEnd"
                android:textColor="#0B0B0B"
                android:textSize="30dp"></EditText>


            <TextView
                android:layout_alignParentEnd="true"
                android:layout_below="@id/edtext_input"
                android:id="@+id/tv_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                android:textColor="#A39F9F">

            </TextView>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MC MR M- M+"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:textColor="#979191">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_7"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#E3E0E0"
                    android:onClick="sevenOnClick"
                    android:text="7"
                    android:textColor="#2D44C3"></Button>

                <Button
                    android:id="@+id/btn_8"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#E3E0E0"
                    android:onClick="eightOnClick"
                    android:text="8"
                    android:textColor="#2D44C3">

                </Button>

                <Button
                    android:id="@+id/btn_9"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#E3E0E0"
                    android:onClick="nineOnClick"
                    android:text="9"
                    android:textColor="#2D44C3">

                </Button>
                <Button
                    android:id="@+id/btn_congtru"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="+/-"
                    android:layout_margin="5dp"
                    android:backgroundTint="#9A9696"
                    android:textColor="#FAFAFA">

                </Button>

                <Button
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#9A9696"
                    android:onClick="bracketsOnClick"
                    android:text="-->"
                    android:textColor="#FAFAFA">

                </Button>
            </LinearLayout>
            <LinearLayout
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_4"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#E3E0E0"
                    android:onClick="fourOnClick"
                    android:text="4"
                    android:textColor="#2D44C3">

                </Button>

                <Button
                    android:id="@+id/btn_5"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#E3E0E0"
                    android:onClick="fiveOnClick"
                    android:text="5"
                    android:textColor="#2D44C3">

                </Button>

                <Button
                    android:id="@+id/btn_6"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#E3E0E0"
                    android:onClick="sixOnClick"
                    android:text="6"
                    android:textColor="#2D44C3">

                </Button>

                <Button
                    android:id="@+id/btn_nhan"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#9A9696"
                    android:onClick="timesOnClick"
                    android:text="*"
                    android:textColor="#FAFAFA">

                </Button>

                <Button
                    android:id="@+id/btn_chia"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="#9A9696"
                    android:onClick="divisionOnClick"
                    android:text="/"
                    android:textColor="#FAFAFA">

                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_1"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="#E3E0E0"
                        android:onClick="oneOnClick"
                        android:text="1"
                        android:textColor="#2D44C3">

                    </Button>

                    <Button
                        android:id="@+id/btn_2"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="#E3E0E0"
                        android:onClick="twoOnClick"
                        android:text="2"
                        android:textColor="#2D44C3">

                    </Button>

                    <Button
                        android:id="@+id/btn_3"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="#E3E0E0"
                        android:onClick="threeOnClick"
                        android:text="3"
                        android:textColor="#2D44C3">

                    </Button>

                    <Button
                        android:id="@+id/btn_tru"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="#9A9696"
                        android:onClick="minusOnClick"
                        android:text="-"
                        android:textColor="#FAFAFA">

                    </Button>

                </LinearLayout>
                <LinearLayout
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_del"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="#CF0808"
                        android:onClick="clearOnClick"
                        android:text="C"
                        android:textColor="#F6F5F5">

                    </Button>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="#E3E0E0"
                        android:onClick="zeroOnClick"
                        android:text="0"
                        android:textColor="#2D44C3">

                    </Button>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="#E3E0E0"
                        android:onClick="decimalOnClick"
                        android:text="."
                        android:textColor="#2D44C3">

                    </Button>

                    <Button
                        android:id="@+id/btn_cong"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:backgroundTint="#9A9696"
                        android:onClick="plusOnClick"
                        android:text="+"
                        android:textColor="#FAFAFA">

                    </Button>

                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/btn_bang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="8"
                android:backgroundTint="#2B48E8"
                android:onClick="equalsOnClick"
                android:text="="
                android:textColor="#FAFAFA"></Button>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decimal places - F (change)                    PC/Mobile"
                android:layout_marginLeft="5dp"
                android:textSize="18dp"
                android:textColor="#979191">
            </TextView>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>